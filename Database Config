Create .env:

PORT=5000
DATABASE_URL=postgresql://your_user:your_password@localhost:5432/skillbridge
JWT_SECRET=supersecretkey




Create src/config/db.js:

import pg from "pg";
import dotenv from "dotenv";

dotenv.config();
const { Pool } = pg;

const pool = new Pool({
  connectionString: process.env.DATABASE_URL,
});

export default pool;



